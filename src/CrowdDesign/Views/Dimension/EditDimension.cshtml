@{
    ViewBag.Title = "Edit dimension";
}

@model CrowdDesign.UI.Web.Models.EditDimensionViewModel

<div id="divEditDimensionMain">
    @{
        string actionName;

        if (Model == null || Model.DimensionId == null)
        {
            actionName = "CreateDimension";
        }
        else
        {
            actionName = "UpdateDimension";
        }

        Html.ValidationSummary(true);

        <br />

        using (Html.BeginForm(actionName, "Dimension", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ProjectId)
            @Html.HiddenFor(model => model.DimensionId)

            <div class="divEditDimensionField">
                <div>
                    @Html.LabelFor(model => model.Name, new { Class = "lblField" })
                </div>

                <div>
                    @Html.TextBoxFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="divEditDimensionField">
                <div>
                    @Html.LabelFor(model => model.SortCriteria, new { Class = "lblField" })
                </div>

                <div>
                    @Html.TextBoxFor(model => model.SortCriteria)
                    @Html.ValidationMessageFor(model => model.SortCriteria)
                </div>
            </div>

            <div class="divEditDimensionField">
                <div>
                    @Html.LabelFor(model => model.Description, new { Class = "lblField" })
                </div>

                <div>
                    @Html.TextAreaFor(model => model.Description, new { Id = "txtDescription" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="divEditDimensionField">
                <input id="btnSaveSketch" type="submit" value="Save changes" />
            </div>
        }
    }
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
